# etc/init.d/S99 script [start|stop|restart]
#!/bin/sh
DAEMON_PATH=/usr/bin
START_STOP_DAEMON_PATH=/usr/sbin
#check passed in option


DAEMON=${DAEMON_PATH}/aesdsocket
DAEMON_ARGS="-d"

case "$1" in 
	start)
		echo "starting daemon aesdsocket"
		echo /usr/sbin/start-stop-daemon --start --exec "${DAEMON}" -- "${DAEMON_ARGS}"
		${START_STOP_DAEMON_PATH}/start-stop-daemon --start --exec "${DAEMON}" -- "${DAEMON_ARGS}"
	;;
esac

exit 0
		
